<%-include('header') %>
    <div class="container">
        <div class="row">
          <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="panel-title">Edit Password Details</div>
                <div style="float: right; font-size: 85%; position: relative; top: -10px;" ></div>
              </div>
              <div class="panel-body">
                <form action="/showPassword/update/" id="addNewCateoryForm" class="form-horizontal" role="form" method="post">
                    <input type="hidden" name="updateID" value="<%= records._id %>">
                  <div class="form-group">
                    <label for="username" class="col-md-3 control-label">Password Category:</label>
                    <div class="col-md-9">
                        <select name="editCategory">
                            <% if(category.length >0){%>
                                <% category.forEach(function(row){%>
                                    <option value="<%= row.category %>" <% if(row.category == records.category) {%> selected <%} %> ><%= row.category %></option>
                                <%}) %>    
                            <%} %>
                        </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="username" class="col-md-3 control-label">Project name:</label>
                    <div class="col-md-9">
                      <input type="text" class="form-control" name="editProName" value="<%= records.proName %>">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="username" class="col-md-3 control-label">Password Details:</label>
                    <div class="col-md-9">
                      <textarea type="text" rows="5" id="editor" class="form-control" name="editPasswordDetails"><%= records.addPasswordDetails %></textarea>
                    </div>
                  </div>
    
                  <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-9">
                      <input type="submit" type="button" class="btn btn-info" value="Edit Password">
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script>
        CKEDITOR.replace('editor')
      </script>
  </body>
</html>
