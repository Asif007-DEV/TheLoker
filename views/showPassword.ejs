<%-include('header') %>
    <div class="container">
        <h1>View All Password Details</h1>
        <table style="width: 100%;">
          
          <thead>
            <tr style="border-bottom: 3px solid;" >
              <th>Category Name</th>
              <th>Project Name</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <% if(records.length > 0){%>
              <% records.forEach(function(row){%>
                <tr style="border-bottom: 1.5px solid gray; font-weight: bolder;">
                  <td><%=row.category %></td>
                  <td><%=row.proName %></td>
                  <td class="text-center">
                      <button type="button" class="btn btn-info btn-xs" data-toggle="modal" data-target="#myModal<%= row._id %>"><i class="fa fa-eye"></i></button>
                      <a class="btn btn-primary btn-xs"href="/showPassword/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                      <a class="btn btn-danger btn-xs" href="/showPassword/delete/<%= row._id %>" onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i></a>
                  </td>
                </tr>
                    <!-- Modal -->
                <div id="myModal<%= row._id %>" class="modal fade" role="dialog">
                  <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title"><%=row.proName %></h4>
                      </div>
                      <div class="modal-body"> 
                        <%-row.addPasswordDetails %>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>        
              <%})%>            
          <%}else{%>
            <tr class="text-center"style="border-bottom: 1.5px solid gray; font-weight: bolder;">
              <td colspan="3">Records are Not Found...</td></tr>
            <%} %>   
        </table>
        
      </div>
  </body>
</html>
